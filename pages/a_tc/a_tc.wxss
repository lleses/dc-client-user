/**index.wxss**/

.index_title {
  float: left;
  width: 100%;
  text-align: center;
  border-top: 6rpx solid #c20c0c;
  border-bottom: 6rpx solid #c20c0c;
}

.index_title span {
  float: left;
  width: 20%;
  margin: 20rpx 2.5%;
  padding: 20rpx 0px;
  border-radius: 10rpx;
}

.title_cols {
  color: white;
  background: #ffc107;
  text-align: center;
}

.content_tab_show {
  float: left;
  width: 100%;
}

.content_tab_hide {
  display: none;
}

.content_cols {
  float: left;
  width: 46%;
  padding: 2%;
  border-bottom: 2rpx solid #ddd;
}

.content_cols image {
  width: 100%;
  height: 200rpx;
}

.content_cols span {
  float: left;
  width: 100%;
  font-size: 28rpx;
  padding: 10rpx 0px;
}

.content_cols em {
  float: left;
  width: 100%;
  color: red;
  font-size: 24rpx;
}
