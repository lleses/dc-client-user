.addType {
  margin: 20rpx 20rpx 0px 20rpx;
  text-align: center;
  float: left;
  font-size: 28rpx;
}

.row-2 {
  float: left;
  width: 710rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  margin: 20rpx;
}

.row-2 span {
  float: left;
  width: 100rpx;
  border-right: 2rpx solid #ddd;
  padding: 20rpx;
  font-size: 32rpx;
  color: #9e9e9e;
  background-color: #f3e9e9;
  text-align: center;
  height: 40rpx;
}

.row-2 picker {
  float: left;
  width: 528rpx;
  padding: 20rpx;
  height: 40rpx;
}

.row-2 input {
  float: left;
  font-size: 32rpx;
  height: 72rpx;
  width: 528rpx;
  padding: 0px 20rpx;
}

.row-2-1 {
  float: left;
  width: 100%;
  border-bottom: 2rpx solid #ddd;
}

.row-2-2 {
  float: left;
  width: 100%;
}

.row-last {
  width: 706rpx;
  margin: 20rpx;
  float: left;
  font-size: 32rpx;
}

/* 弹出层 */

.popup-layer {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
}

.addType-view {
  float: left;
  margin: 200rpx 0px 0px 60px;
  width: 500rpx;
  background-color: white;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.addType-view-title {
  float: left;
  width: 100%;
  padding: 20rpx 0px;
  border-bottom: 2rpx solid #ddd;
  background-color: #009688;
  color: #ddd;
  border-radius: 10rpx 10rpx 0 0;
}

.addType-view-input {
  float: left;
  width: 100%;
  border-bottom: 2rpx solid #ddd;
}

.addType-view-input input {
  text-align: left;
  padding: 10rpx;
  border: 2rpx solid #2196f3;
  border-radius: 10rpx;
  margin: 20rpx;
}

.addType-view-botton {
  float: left;
  width: 100%;
  color: #2196f3;
  text-align: center;
}

.addType-view-botton-ok {
  float: left;
  width: 249rpx;
  padding: 20rpx 0px;
}

.addType-view-botton-cans {
  float: left;
  width: 249rpx;
  padding: 20rpx 0px;
  border-right: 2rpx solid #ddd;
}

.tab_show {
  display: inline;
}

.tab_hide {
  display: none;
}

.tab3 {
  float: left;
  width: 708rpx;
  text-align: center;
  border: 2rpx solid #ddd;
  margin: 20rpx;
  border-radius: 10rpx;
}

.tab3 .tab3-row1 {
  font-size: 32rpx;
  color: #9e9e9e;
  float: left;
  width: 100%;
  background-color: #f3e9e9;
}

.tab3 .tab3-row1 .tab3-row1-cols1 {
  float: left;
  width: 230rpx;
  border-right: 2rpx solid #ddd;
  padding: 20rpx 0px;
}

.tab3 .tab3-row1 .tab3-row1-cols2 {
  float: left;
  width: 345rpx;
  border-right: 2rpx solid #ddd;
  padding: 20rpx 0px;
}

.tab3 .tab3-row1 .tab3-row1-cols3 {
  float: left;
  width: 337rpx;
  padding: 20rpx 0px;
}

.tab3 .tab3-row2 {
  float: left;
  width: 100%;
}

.tab3 .tab3-row2 .tab3-row2-cols1 {
  float: left;
  width: 230rpx;
  border-right: 2rpx solid #ddd;
  padding: 20rpx 0px;
  height: 40rpx;
}

.tab3 .tab3-row2 .tab3-row2-cols2 {
  float: left;
  width: 345rpx;
  border-right: 2rpx solid #ddd;
  padding: 20rpx 0px;
  height: 40rpx;
  min-height: 40rpx;
}

.tab3 .tab3-row2 .tab3-row2-cols3 {
  float: left;
