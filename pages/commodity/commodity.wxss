page {
  height: 100%;
}

.row-1 {
  float: left;
  width: 100%;
  border-bottom: 2rpx solid #ddd;
  padding: 10rpx 0 10rpx 30rpx;
  height:60rpx;
}

.row-2-left {
  float: left;
  width: 200rpx;
  height: 100%;
  text-align: center;
  border-right: 2rpx solid #ddd;
}

.sel {
  background-color: #ffc107;
  color: white;
}

.row-2-left view {
  float: left;
  width: 100%;
  border-right: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
}

.row-2-left view span {
  float: left;
  width: 160rpx;
  padding: 10rpx;
  margin: 10rpx;
}

.row-2-right {
  float: left;
  width: 528rpx;
  padding: 0px 10rpx;
}

.row-2-right-col {
  float: left;
  width: 100%;
  padding: 10rpx 0px;
  height: 160rpx;
  border-bottom: 2rpx solid #ddd;
}

.row-2-right-col image {
  float: left;
  width: 200rpx;
  height: 160rpx;
}

.row-2-right-col .content {
  float: left;
  width: 308rpx;
  height: 150rpx;
  padding: 0px 10rpx;
}

.row-2-right-col .content .name {
  float: left;
  width: 100%;
  padding: 5rpx 0px;
  font-size: 32rpx;
}

.row-2-right-col .content .price {
  float: left;
  width: 100%;
  padding: 5rpx 0px;
  font-size: 28rpx;
}

.row-2-right-col .content .icons {
  float: left;
  width: 100%;
  padding: 5rpx 0px;
}
